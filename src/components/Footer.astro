---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-inner">
    <p class="footer-copy">&copy; {currentYear} Freshen Interiors</p>
  </div>
</footer>

<style>
  .footer {
    padding: 2rem 3rem;
    border-top: 1px solid rgba(246, 239, 228, 0.15);
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-copy {
    font-size: 0.75rem;
    color: var(--color-secondary);
    opacity: 0.4;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 1.5rem 1.25rem;
    }
  }
</style>
